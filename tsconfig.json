{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "rootDir": ".",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    },
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ],
  "include": ["src/**/*", "typing.d.ts"]
}
