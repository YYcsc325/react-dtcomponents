{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    // "rootDir": ".",
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "strict": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "declaration": true, // ts文件生成配置， 跟baseUrl paths的路径配置
    "noImplicitAny": false,
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules", "lib", "es", "dist"],
  "include": ["src/**/*", "typing.d.ts"]
}
